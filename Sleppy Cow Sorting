#define IOS                           \
    ios_base::sync_with_stdio(false); \
    cin.tie(nullptr);                 \
    cout.tie(nullptr);

using namespace std;

void solve(){
    int n , cont = 1;
    cin >> n;
    vector<int>a(n);
    for(int &i : a) cin >> i;

    for(int i = n - 1 ; i > 0 ; i--){
        if(a[i] > a[i - 1])
            cont++;

        else
        break;
        }
    cout << n - cont << '\n';
}

int32_t main()
{
    freopen("sleepy.in" , "r" , stdin);
    freopen("sleepy.out" , "w" , stdout);
    solve();
}
